<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:activity="com.example.pawel_piedel.thesis.ui.augumented_reality.ARActivity">

    <RelativeLayout
        android:id="@+id/cameraLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.pawel_piedel.thesis.ui.augumented_reality.AutoFitTextureView
            android:id="@+id/textureaAR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />

        <RelativeLayout
            android:layout_margin="@dimen/activity_vertical_margin"
            android:id="@+id/businessViewAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:visibility="gone"
            android:orientation="vertical"
            android:background="#ffffff"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentStart="true">
            <TextView
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:id="@+id/businessTitleAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_alignParentTop="true"
                 />
            <TextView
                android:id="@+id/businessDistanceAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/businessTitleAR"
                android:paddingBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
              />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/azimuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cameraLayout"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/azimuth"
        android:layout_centerHorizontal="true" />


</RelativeLayout>







